<?xml version="1.0"?>

<config>
    <modules>
        <School5_TextCreator>
            <version>0.1.1</version>
        </School5_TextCreator>
    </modules>

    <frontend>
        <routers>
            <textcreator>
                <use>standard</use>
                <args>
                    <module>School5_TextCreator</module>
                    <frontName>textcreator</frontName>
                </args>
            </textcreator>
        </routers>
        <layout>
            <updates>
                <shcool5_textcreator>
                    <file>textcreator.xml</file>
                </shcool5_textcreator>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <textcreator>
                <class>School5_TextCreator_Block</class>
            </textcreator>
        </blocks>
        <models>
            <textcreator>
                <class>School5_TextCreator_Model</class>
                <resourceModel>textcreator_resource</resourceModel>
            </textcreator>
            <textcreator_resource>
                <class>School5_TextCreator_Model_Resource</class>
                <entities>
                    <blog_posts>
                        <table>blog_posts</table>
                    </blog_posts>
                </entities>
            </textcreator_resource>
        </models>
        <resources>
            <textcreator_setup>
                <setup>
                    <module>School5_TextCreator</module>
                    <class>School5_TextCreator_Model_Resource_Setup</class>
                </setup>
            </textcreator_setup>
        </resources>
    </global>
</config>
