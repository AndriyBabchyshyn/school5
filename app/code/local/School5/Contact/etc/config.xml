<config>
    <modules>
        <School5_Contact>
            <version>0.1.0</version>
        </School5_Contact>
    </modules>

    <frontend>
        <routers>
            <contacts>
                <args>
                    <modules>
                        <School5_contact before="Mage_Contacts">Training_Contact</School5_contact>
                    </modules>
                </args>
            </contacts>
        </routers>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <School5_contact before="Mage_Adminhtml">Training_Contact_Adminhtml</School5_contact>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <contact>
                    <file>contact/layout.xml</file>
                </contact>
            </updates>
        </layout>
    </adminhtml>

    <global>

        <blocks>
            <contact>
                <class>School5_Contact_Block</class>
            </contact>
        </blocks>

        <models>
            <contact>
                <class>School5_Contact_Model</class>
                <resourceModel>contact_resource</resourceModel>
            </contact>
            <contact_resource>
                <class>School5_Contact_Model_Resource</class>
                <entities>
                    <message>
                        <table>custom_contact</table>
                    </message>
                </entities>
            </contact_resource>
        </models>
        <resources>

            <contact_setup>
                <setup>
                    <module>School5_Contact</module>
                </setup>
            </contact_setup>
        </resources>
        <helpers>
            <contact>
                <class>School5_Contact_Helper</class>
            </contact>
        </helpers>
    </global>
</config>